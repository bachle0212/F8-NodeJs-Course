<div class="mt-4">
    <div>
        <a type="button" class="btn btn-dark" href="/course/create" role="button">Create course</a>
    </div>
    <div class="row">
        {{#each courses}}
        <div class="col">
            <div class="card-course-item h-100">
                <div class="card h-100" style="width: 18rem;">
                    <a href="/course/{{this.slug}}">
                        <img class="card-img" src="{{this.image}}" alt="Card image cap"></a>
                    </a>
                    <div class="card-body">
                        <a href="/course/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>